<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.leslie.financemanager.StatisticsTabActivity.StatisticsFragment">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/default_widget_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/statistics_by_category"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_summary"
                android:layout_marginTop="@dimen/default_widget_padding"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:textSize="12sp"/>
            <Button
                android:id="@+id/btn_view_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_records"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/list_cate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:listitem="@layout/statistics_item_cate"
        android:divider="@null"
        android:dividerHeight="1dp"/>
</LinearLayout>
